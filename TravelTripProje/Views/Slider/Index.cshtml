@model List<TravelTripProje.Entities.Slider>

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="mb-8">
    <div class="flex flex-col gap-1">
        <h2 class="text-slate-900 dark:text-slate-50 text-3xl font-black tracking-tight">Sliders</h2>
    </div>
</div>

<div class="bg-white dark:bg-background-dark rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
            <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-slate-200 dark:border-slate-800">
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 w-20">ID</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">Görsel</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 text-right">İşlemler</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
            @foreach (var item in Model)
            {
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors group">
                    <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">1</td>
                    <td class="px-6 py-4">
                        <img src="@item.ImgUrl" alt="Slider" class="w-40 h-24 object-cover rounded-lg border border-slate-200 dark:border-slate-700 shadow-sm">
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex justify-end gap-2">
                            <button class="text-primary hover:text-primary/80 text-sm font-bold flex items-center gap-1">
                                <span class="material-symbols-outlined text-[16px]">edit</span>
                                Edit
                            </button>
                            <button class="text-rose-500 hover:text-rose-600 text-sm font-bold flex items-center gap-1">
                                <span class="material-symbols-outlined text-[16px]">delete</span>
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>