@model TravelTripProje.Entities.Blog

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="mb-8">
    <div class="flex items-center justify-between">
        <div class="flex flex-col gap-1">
            <h2 class="text-slate-900 dark:text-slate-50 text-3xl font-black tracking-tight">Blog Güncelle</h2>
        </div>
    </div>
</div>

<!-- Form Card Container -->
<div class="bg-white dark:bg-background-dark rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
    <form method="post" class="p-8">
        <div class="space-y-6">
            <input type="hidden" asp-for="BlogId"/>
            <!-- Başlık -->
            <div>
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
                    Başlık
                    <span class="text-rose-500">*</span>
                </label>
                <input type="text" 
                       asp-for="Title" 
                       class="w-full px-4 py-3 bg-white dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:text-slate-100 transition-all"
                       placeholder="Blog başlığını girin">
                <span asp-validation-for="Title" class="text-rose-500 text-sm mt-1"></span>
            </div>

            <!-- Açıklama -->
            <div>
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
                    Açıklama
                    <span class="text-rose-500">*</span>
                </label>
                <textarea 
                    asp-for="Description" 
                    rows="6"
                    class="w-full px-4 py-3 bg-white dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:text-slate-100 transition-all resize-none"
                    placeholder="Blog içeriğini yazın..."></textarea>
                <span asp-validation-for="Description" class="text-rose-500 text-sm mt-1"></span>
            </div>

            <!-- Tarih -->
            <div>
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
                    Tarih
                    <span class="text-rose-500">*</span>
                </label>
                <input type="date" 
                       asp-for="Date" 
                       class="w-full px-4 py-3 bg-white dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:text-slate-100 transition-all">
                <span asp-validation-for="Date" class="text-rose-500 text-sm mt-1"></span>
            </div>

            <!-- Görsel Yolu -->
            <div>
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">
                    Görsel Yolu
                    <span class="text-rose-500">*</span>
                </label>
                <input type="text" 
                       asp-for="BlogImage" 
                       class="w-full px-4 py-3 bg-white dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:text-slate-100 transition-all"
                       placeholder="/images/blog/resim.jpg">
                <span asp-validation-for="BlogImage" class="text-rose-500 text-sm mt-1"></span>
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">Örnek: /images/blog/resim.jpg</p>
            </div>

            <!-- Butonlar -->
            <div class="flex items-center gap-4 pt-6 border-t border-slate-200 dark:border-slate-800">
                <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-bold">
                    <span class="material-symbols-outlined text-[20px]">save</span>
                    Kaydet
                </button>
                <a href="~/Blog/BlogList" class="inline-flex items-center gap-2 px-6 py-3 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors font-bold">
                    <span class="material-symbols-outlined text-[20px]">cancel</span>
                    İptal
                </a>
            </div>

        </div>
    </form>
</div>