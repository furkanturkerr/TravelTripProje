@model List<TravelTripProje.Entities.AppUser>

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="mb-8">
    <div class="flex flex-col gap-1">
        <h2 class="text-slate-900 dark:text-slate-50 text-3xl font-black tracking-tight">Kullanıcılar</h2>
        <p class="text-slate-500 dark:text-slate-400 text-sm">Tüm kullanıcıları buradan yönetebilirsiniz</p>
    </div>
</div>

<!-- Stats Card -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <div class="bg-white dark:bg-background-dark rounded-xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-primary/10 dark:bg-primary/20 rounded-lg">
                <span class="material-symbols-outlined text-primary text-2xl">group</span>
            </div>
            <div>
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">Toplam Kullanıcı</p>
                <p class="text-2xl font-black text-slate-900 dark:text-slate-50">@Model.Count</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white dark:bg-background-dark rounded-xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-emerald-500/10 dark:bg-emerald-500/20 rounded-lg">
                <span class="material-symbols-outlined text-emerald-500 text-2xl">verified_user</span>
            </div>
            <div>
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">Aktif Kullanıcı</p>
                <p class="text-2xl font-black text-slate-900 dark:text-slate-50">@Model.Count(u => u.EmailConfirmed)</p>
            </div>
        </div>
    </div>
</div>

<!-- Table Card Container -->
<div class="bg-white dark:bg-background-dark rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
            <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-slate-200 dark:border-slate-800">
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 w-20">ID</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">Kullanıcı</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">Kullanıcı Adı</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">E-posta</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">Durum</th>
                <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 text-right">İşlemler</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
            @if (Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors group">
                        <td class="px-6 py-4 text-sm font-bold text-slate-500 dark:text-slate-400">@Model.IndexOf(user) + 1</td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-primary/60 flex items-center justify-center text-white font-bold text-sm">
                                    @(user.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                                <div>
                                    <p class="text-sm font-semibold text-slate-900 dark:text-slate-50">@user.UserName</p>
                                    <p class="text-xs text-slate-500 dark:text-slate-400">@user.Email</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-700 dark:text-slate-300">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-slate-400 text-[16px]">person</span>
                                @user.UserName
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400">
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-slate-400 text-[16px]">mail</span>
                                @user.Email
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            @if (user.EmailConfirmed)
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300">
                                    <span class="material-symbols-outlined text-[14px] mr-1">check_circle</span>
                                    Aktif
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300">
                                    <span class="material-symbols-outlined text-[14px] mr-1">pending</span>
                                    Beklemede
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end gap-2">
                                <a href="~/User/Update/@user.Id" class="text-primary hover:text-primary/80 text-sm font-bold flex items-center gap-1 transition-colors">
                                    <span class="material-symbols-outlined text-[16px]">edit</span>
                                    Düzenle
                                </a>
                                <a href="~/User/Delete/@user.Id" class="text-rose-500 hover:text-rose-600 text-sm font-bold flex items-center gap-1 transition-colors">
                                    <span class="material-symbols-outlined text-[16px]">delete</span>
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center">
                        <div class="flex flex-col items-center gap-3">
                            <div class="w-16 h-16 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center">
                                <span class="material-symbols-outlined text-slate-400 text-4xl">group_off</span>
                            </div>
                            <p class="text-slate-500 dark:text-slate-400 font-medium">Henüz kullanıcı bulunmuyor</p>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<br/>
<a href="~/Register/CreateUser" class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary text-white rounded-lg hover:bg-primary/90 transition-all shadow-sm hover:shadow-md font-bold">
    <span class="material-symbols-outlined text-[20px]">person_add</span>
    Yeni Kullanıcı Ekle
</a>

@if (Model.Any())
{
    <div class="mt-4 text-sm text-slate-500 dark:text-slate-400">
        Toplam <span class="font-bold text-slate-900 dark:text-slate-50">@Model.Count</span> kullanıcı görüntüleniyor
    </div>
}