@model TravelTripProje.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="light" lang="en"><head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Kullanıcı Oluştur</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: {"DEFAULT": "0.5rem", "lg": "1rem", "xl": "1.5rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col font-display transition-colors duration-300">
<main class="flex-1 flex items-center justify-center p-6">
    <div class="w-full max-w-[480px] bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-[#e7edf3] dark:border-slate-800 p-8 md:p-10">
        <div class="mb-8">
            <h1 class="text-[#0d141b] dark:text-slate-100 tracking-tight text-[32px] font-bold leading-tight text-center pb-2">Kullanıcı Oluştur</h1>
        </div>
        <form class="space-y-5" method="post">
            <div class="flex flex-col w-full">
                <label class="flex flex-col w-full">
                    <p class="text-[#0d141b] dark:text-slate-200 text-sm font-medium leading-normal pb-2">Kullanıcı Adı</p>
                    <div class="relative">
                        <input asp-for="UserName" class="form-input flex w-full rounded-xl text-[#0d141b] dark:text-slate-100 focus:outline-0 focus:ring-2 focus:ring-primary/20 border border-[#cfdbe7] dark:border-slate-700 bg-slate-50 dark:bg-slate-800 focus:border-primary h-14 placeholder:text-[#4c739a] px-4 text-base font-normal transition-all"  type="text"/>
                    </div>
                </label>
            </div>
            <div class="flex flex-col w-full">
                <label class="flex flex-col w-full">
                    <p class="text-[#0d141b] dark:text-slate-200 text-sm font-medium leading-normal pb-2">Email</p>
                    <div class="relative">
                        <input asp-for="Email" class="form-input flex w-full rounded-xl text-[#0d141b] dark:text-slate-100 focus:outline-0 focus:ring-2 focus:ring-primary/20 border border-[#cfdbe7] dark:border-slate-700 bg-slate-50 dark:bg-slate-800 focus:border-primary h-14 placeholder:text-[#4c739a] px-4 text-base font-normal transition-all"  type="email"/>
                    </div>
                </label>
            </div>
            <div class="flex flex-col w-full">
                <label class="flex flex-col w-full">
                    <p class="text-[#0d141b] dark:text-slate-200 text-sm font-medium leading-normal pb-2">Şifre</p>
                    <div class="relative group">
                        <input asp-for="Password" required class="form-input flex w-full rounded-xl text-[#0d141b] dark:text-slate-100 focus:outline-0 focus:ring-2 focus:ring-primary/20 border border-[#cfdbe7] dark:border-slate-700 bg-slate-50 dark:bg-slate-800 focus:border-primary h-14 placeholder:text-[#4c739a] px-4 text-base font-normal transition-all"  type="password"/>
                        <button class="absolute right-4 top-1/2 -translate-y-1/2 text-[#4c739a] hover:text-primary transition-colors" type="button">
                            <span class="material-symbols-outlined text-xl">visibility</span>
                        </button>
                    </div>
                </label>
            </div>
            <div class="pt-4">
                <button class="flex w-full cursor-pointer items-center justify-center rounded-xl h-14 px-5 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 shadow-lg shadow-primary/20 transition-all active:scale-[0.98]" type="submit">
                    <span class="truncate">Kullanıcı Oluştur</span>
                </button>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</main>
</body></html>